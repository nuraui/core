{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["esnext", "DOM"],
    "types": [
      "@vue-macros/reactivity-transform/macros-global"
    ],
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": [
    "auto-imports.d.ts",
    "components.d.ts",
    "composables.d.ts"
  ]
}
